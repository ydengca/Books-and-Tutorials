@{
    Validation.RequireField("address", "Address is required");
}

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Map an Address</title>
  <script src="~/Scripts/jquery-1.6.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
  <script src="@Href("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

</head>

<body>
    <h1>Show the Address on Map</h1>
    <form method="post">
        <fieldset>
          <div>
            <label for="address">Address:</label>
            <input style="width: 300px" type="text" name="address" value="@Request["address"]" @Validation.For("address")/>
            <input type="submit" value="Show in Map" />
           </div>
            <div>
                          @Html.ValidationMessage("address")
            </div>
        </fieldset>
    </form>
    @if(IsPost && Validation.IsValid()) {
        @Maps.GetGoogleHtml(Request.Form["address"],
            width: "400",
            height: "400")
    }
</body>
</html>